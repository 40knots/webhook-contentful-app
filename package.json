{
  "name": "webhook-contentful-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@contentful/field-editor-single-line": "^0.14.1",
    "@contentful/field-editor-test-utils": "^0.11.1",
    "@contentful/forma-36-fcss": "0.3.2",
    "@contentful/forma-36-react-components": "^3.89.3",
    "@contentful/forma-36-tokens": "^0.10.2",
    "@emotion/core": "^11.0.0",
    "@emotion/styled": "^11.3.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "contentful-ui-extensions-sdk": "^3.34.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "prettier": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test --env=jsdom-fourteen --verbose --colors",
    "test:watch": "react-scripts test --env=jsdom-fourteen --verbose",
    "lint": "eslint ./src/**/*.*",
    "lint:fix": "eslint ./src/**/*.* --fix",
    "format": "prettier --check src/**/*.*",
    "format:fix": "prettier --write src/**/*.*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
